public function generateUrl($name, $parameters = null)
    {
        foreach ($this->routes as $key => $value) {
            if ($key === $name) {
                $url = $value['path'];
                if (isset($parameters)) {
                    $url = str_replace('{id}', $parameters['id'], $value['path']);
                }
            }
        }
        return $url;
    }
